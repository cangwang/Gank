<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="handler"
            type="material.com.news.handler.NewsEventHandler"/>
        <variable
            name="news"
            type="material.com.news.model.NewsItem"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{news.clickToWeb}"
        >
        <ImageView
            android:id="@+id/news_recyle_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:clickable="true"
            app:imageurl="@{news.images[0]}"
            app:holderDrawable="@{@drawable/ic_launcher}"
            app:errorDrawable="@{@drawable/ic_launcher}"/>
        <TextView
            android:id="@+id/news_recyle_title"
            android:layout_toRightOf="@+id/news_recyle_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@{news.desc}"/>
        <TextView
            android:id="@+id/news_recyle_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/news_recyle_img"
            android:layout_below="@+id/news_recyle_title"
            android:textSize="20sp"
            android:text="@{news.who}"/>
        <!--<Button-->
            <!--android:id="@+id/news_btn"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/news_recyle_sub_title"-->
            <!--android:layout_toRightOf="@+id/news_recyle_img"-->
            <!--android:onClick="@{()->handler.clickToWeb(news.url)}"/>-->
    </RelativeLayout>
</layout>